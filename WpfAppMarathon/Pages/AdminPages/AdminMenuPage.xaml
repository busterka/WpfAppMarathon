<Page x:Class="WpfAppMarathon.Pages.AdminPages.AdminMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppMarathon.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMenuPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label Content="Admin menu" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50"/>
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Button x:Name="AdminUserButton" Content="Пользователи" Width="200" Height="50" Margin="5" Click="AdminUserButton_Click"/>
                    <Button x:Name="AdminVolonterButton" Content="Волонтеры" Width="200" Height="50" Margin="5"/>
                </StackPanel>
                <StackPanel>
                    <Button x:Name="AdminFoundationButton" Content="Благотворительные организации" Width="200" Height="50" Margin="5"/>
                    <Button x:Name="AdminInventoryButton" Content="Инвентарь" Width="200" Height="50" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            
        </StackPanel>
    </Grid>
</Page>
